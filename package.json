{
  "name": "easy-bill",
  "version": "1.0.0",
  "main": "dist-electron/main/index.js",
  "description": "Local-First Hotel Billing Software",
  "author": "Your Name",
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "fastify": "^5.0.0",
    "internal-ip": "^8.0.0",
    "qrcode": "^1.5.4",
    "axios": "^1.7.9",
    "node-machine-id": "^1.1.12",
    "fs-extra": "^11.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "react-router-dom": "^6.22.0",
    "lucide-react": "^0.344.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "electron-builder": "^25.1.8",
    "@types/better-sqlite3": "^7.6.12",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "node-gyp": "^10.0.0"
  },
  "overrides": {
    "node-gyp": "^10.0.0"
  },
  "build": {
    "appId": "com.easybill.app",
    "productName": "Easy Bill",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "extraResources": [
      {
        "from": "easy_bill.db",
        "to": "easy_bill.db",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}